extends layout

block content

    div.alert.alert-warning#loadingEmotesMessage(role="alert")
        strong.
            Emoticons are currently loading.

    div.alert.alert-success.alert-dismissable#successEmotesMessage(role="alert", style="display:none")
        button(type="button", class="close", data-dismiss="alert", aria-label="Close")
            span(aria-hidden="true").
                &times;
        strong.
            Emoticons have been successfully loaded.

    h1 #{CurrentChannel}
    
    div#messages

block scripts
    script(src='https://cdn.socket.io/socket.io-1.3.4.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.2/underscore-min.js')
    script
        include ../public/javascripts/chat.js